{
  "name": "ai-summarizer-react-extension",
  "version": "1.0.0",
  "description": "SmartDigest - AI-powered text summarization Chrome extension using Gemini API",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 10",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && npm run lint && npm run type-check"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/chrome": "^0.0.254",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.24.0",
    "postcss": "^8.4.32",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^5.0.8",
    "vite-plugin-web-extension": "^4.0.0",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "summarizer",
    "gemini",
    "react",
    "typescript",
    "vite"
  ],
  "author": "SmartDigest Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ai-summarizer-chrome-extension.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ai-summarizer-chrome-extension/issues"
  },
  "homepage": "https://github.com/your-username/ai-summarizer-chrome-extension#readme"
}
